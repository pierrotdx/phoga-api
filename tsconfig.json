{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "@types/jest"],
    "baseUrl": "./",
    "paths": {
      "@auth-context": ["src/auth-context"],
      "@logger-context": ["src/logger-context"],
      "@photo-context": ["src/photo-context"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"]
}
