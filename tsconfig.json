{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "@types/jest"],
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@domain": ["src/domain"],
      "@http-server": ["src/http-server"],
      "@http-server/*": ["src/http-server/*"],
      "@logger": ["src/logger/"],
      "@logger/*": ["src/logger/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
