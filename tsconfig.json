{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "@types/jest"],
    "baseUrl": "./",
    "paths": {
      "@business-logic/*": ["src/business-logic/*"],
      "@http-server/*": ["src/http-server/*"],
      "@adapters": ["src/adapters"]
    }
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
